
name=`cat debian/changelog | head -1 | grep -o ^[^\ ]*`
br=`git rev-parse --abbrev-ref HEAD`

if [ "${br}" != "master" ] && [ "${br}" != "main" ]; then
	name=${name}-${br}
fi

base=`dirname ${0}`

cd ~/sync && \
if [ "`git rev-parse --abbrev-ref HEAD`" != "${name}" ]; then
	git switch ${name}
fi && \
#read -n1 -t $((60*60*24))
git add .pc && \
git add debian/patches && \
${base}/commit sync
