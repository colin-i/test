
# @ passed to gh

if [ ! -e ./v2 ]; then
	a=`cat debian/changelog | head -1 | grep -Poe "[^\(]*(?=\))"`
else
	a=`cat v2`
fi
echo $a on clip
echo -n $a | xclip -sel clip
echo "pkgbuild ready? y and enter"
read -t $((60*60*24)) ans
if [ "${ans}" != "y" ]; then exit 1; fi

gh workflow run pkg.yml --ref `git rev-parse --abbrev-ref HEAD` $@
