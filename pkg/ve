
#no nano/vim at base or linux, must edit from host
makepkg -g && #about the files right after download/clone, before patching
#and copy that at sha256sums
##or updpkgsums after installing pacman-contrib
echo p to make a patch, and Enter && \
read -t $((60*60*24)) ans
if [ "${ans}" = "p" ]; then
	~/test/pkg/pt
else
	a="`cat list`"
	for v in $a; do
		git rm $v || exit 1
	done
	echo -n > list && \
	git add list
fi && \
git add PKGBUILD && \
makepkg --printsrcinfo > .SRCINFO && \
git add .SRCINFO && \
echo is the right arch to install \? y and Enter to continue && \
read -t $((60*60*24)) ans && \
if [ "${ans}" = "y" ]; then
	makepkg -i #-e to build without repatching
	#at try at x86_64 is   makepkg -i OPTIONS=-debug    if not wanting edor-debug but want to mix them in same pkg
fi
