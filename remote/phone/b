
f=/var/www/html/remote.txt
while :; do
	a=`cat ${f}`
	if [ -n "${a}" ]; then break; fi
	sleep 5
	echo waiting
done
echo -n > ${f}

echo start

./d
a=`cat 1`
rm 1
echo -n ${a} > /var/www/html/remote2.txt

mv a.jpg /var/www/html

#waiting again for a.jpg print
while :; do
	a=`cat ${f}`
	if [ -n "${a}" ]; then break; fi
	sleep 5
	echo waiting
done
echo -n > ${f}

rm /var/www/html/a.jpg
