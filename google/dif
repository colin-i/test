
t=~/tmp/fisier
ext=${1##*.}

if [ ${ext} = ods ]; then
	ods2tsv $1 > $t
else
	ln -s `readlink -f $1` $t
fi
if [ ! -e ~/tabs/$1 ]; then
	cat $t
else
	diff ~/tabs/$1 $t --color
fi
echo y
read -n1 -t $((60*60*24)) ans
if [ "${ans}" = y ]; then
	if [ ${ext} = ods ]; then
		mv $t ~/tabs/$1
	else
		cp $1 ~/tabs/$1
		rm $t
	fi
	exit 0
fi
rm $t
exit 1
