set -e
#1 is for w4: x=N where N is the required number of day words

echo $(( ( $(date +%s) - $(date -d $(date -d @$(stat -c %Y ~/a/tmp/ffdec/translation.jpt) +%F) +%s) ) / 86400 )) days
./s
read -t $((60*60*24)) ans
./w4 ${ans}
read
cd f
edor ${ans}
cd ..
edor q
~/arh/ffdec
wc -l q
mv q a/${ans}
fl=~/a/tmp/ffdec/translation.jpt
seconds=$(stat -c %Y ${fl})
echo save translation
read
touch -d "@${seconds}" ${fl}
./t ${ans}
