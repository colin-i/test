cd `dirname ${0}`
dir=`pwd`
cd ~/gree-remote/PythonCLI

if [ -z "${1}" ]; then
on=0
else
on=${1}
fi

if [ -z "${2}" ]; then
dif_min=0
else
dif_min=${2}
fi

if [ -z "${3}" ]; then
if [ -n "${2}" ]; then
	dif_max=${dif_min}
else
	dif_max=0
fi
else
dif_max=${3}
fi


if [ -z "${4}" ]; then
sen2=1
else
sen2=${4}
fi

if [ -z "${5}" ]; then
send=1
else
send=0
fi

if [ -z "${6}" ]; then
base=${dir}
else
base=${6}
fi

python ${dir}/temperature_sensor_code.py ${on} ${dif_min} ${dif_max} ${sen2} ${send} ${base}
