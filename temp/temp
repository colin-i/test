cd `dirname ${0}`
dir=`pwd`
cd ~/gree-remote/PythonCLI

#if [ -z "${1}" ]; then
#on=0
#else
#on=${1}
#fi

if [ -z "${1}" ]; then
min=0
else
min=${1}
fi
if [ -z "${2}" ]; then
	if [ -n "${1}" ]; then
		max=$((min+1))
	else
		max=0
	fi
else
	max=${2}
fi
inter=( `cat ~/tempminmax` )
min=$((min+inter[0]))
max=$((max+inter[1]))

if [ -z "${3}" ]; then
sen2=1
else
sen2=${3}
fi

if [ -z "${4}" ]; then
send=1
else
send=0
fi

if [ -z "${5}" ]; then
base=${dir}
else
base=${5}
fi

if [ -n "${dif}" ]; then
	min=${min}+"."+${dif}
	max=${max}+"."+${dif}
fi

python ${dir}/temperature_sensor_code.py ${on} ${min} ${max} ${sen2} ${send} ${base}
